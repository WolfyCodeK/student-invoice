{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "student-invoice-tauri",
  "version": "0.1.0",
  "identifier": "com.isaac.student-invoice-tauri",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Student Invoice",
        "width": 1200,
        "height": 1024,
        "minWidth": 1150,
        "minHeight": 950,
        "resizable": true,
        "maximizable": true,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
